<% if book.favorited_by?(current_user) %>
 
            <%= link_to book_favorite_path(book), remote: true, method: :delete ,data: {"turbolinks" => false} do %>
                ♥<%= book.favorites.count %>
            <% end %>

         <% else %>
 
             <%= link_to book_favorite_path(book), remote: true, method: :post, data: {"turbolinks" => false} do %>
                ♡<%= book.favorites.count %>
             <% end %>

        <% end %>